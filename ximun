<!-- toast -->
<div id="toast" style="display:none" class="toast" role="status" aria-live="polite"></div>

<script>
/* ---------------- Utilities ---------------- */
const $ = (s, root=document) => root.querySelector(s);
const $$ = (s, root=document) => Array.from(root.querySelectorAll(s));
document.getElementById('year').textContent = new Date().getFullYear();

/* ---------------- Countdown ---------------- */
(function countdown(){
  const el = $('#countdown');
  const target = new Date('2025-11-27T09:00:00+05:45').getTime();
  function tick(){
    const now = Date.now();
    let diff = Math.max(0, target - now);
    const d = Math.floor(diff / (1000*60*60*24));
    const h = Math.floor((diff/(1000*60*60))%24);
    const m = Math.floor((diff/(1000*60))%60);
    const s = Math.floor((diff/1000)%60);
    el.textContent = `${d}d ${h}h ${m}m ${s}s`;
  }
  tick();
  setInterval(tick, 1000);
})();

/* ---------------- SG modal on first visit ---------------- */
(function sgModal(){
  const key = 'ximun_seen_sg_v1';
  if(!localStorage.getItem(key)){
    document.getElementById('sg-modal').classList.add('show');
    localStorage.setItem(key, '1');
  }
})();
function hideSG(){
  document.getElementById('sg-modal').classList.remove('show');
}

/* ---------------- Cookie banner ---------------- */
(function initCookie(){
  const key = 'ximun_cookie_v1';
  if(!localStorage.getItem(key)){
    $('#cookie').style.display = 'flex';
  }
})();
function acceptCookie(){ localStorage.setItem('ximun_cookie_v1','1'); $('#cookie').style.display='none'; toast('Cookies accepted'); }
function declineCookie(){ localStorage.setItem('ximun_cookie_v1','0'); $('#cookie').style.display='none'; toast('Cookies declined'); }

/* ---------------- Toast ---------------- */
function toast(txt){
  const el = $('#toast');
  el.textContent = txt;
  el.style.display = 'block';
  clearTimeout(el._t);
  el._t = setTimeout(()=> el.style.display='none', 3500);
}

/* ---------------- Tabs for Register ---------------- */
function showTab(t){
  if(t==='delegate'){ $('#delegate-pane').style.display='block'; $('#dias-pane').style.display='none'; $('#tab-delegate').classList.add('active'); $('#tab-dias').classList.remove('active'); window.scrollTo({top: $('#register').getBoundingClientRect().top + window.scrollY - 80, behavior:'smooth'}); }
  else{ $('#delegate-pane').style.display='none'; $('#dias-pane').style.display='block'; $('#tab-dias').classList.add('active'); $('#tab-delegate').classList.remove('active'); window.scrollTo({top: $('#register').getBoundingClientRect().top + window.scrollY - 80, behavior:'smooth'}); }
}

/* ---------------- Autosave forms to localStorage ---------------- */
function saveForm(key, form){
  const data = {};
  new FormData(form).forEach((v,k)=> data[k] = v);
  localStorage.setItem(key, JSON.stringify(data));
  toast('Draft saved locally');
}
function loadForm(key, form){
  const raw = localStorage.getItem(key);
  if(!raw) return;
  try{
    const obj = JSON.parse(raw);
    Object.keys(obj).forEach(k=>{
      const el = form.elements[k];
      if(!el) return;
      if(el.type === 'file') return;
      el.value = obj[k];
    });
    toast('Draft loaded');
  }catch(e){ console.warn(e) }
}

/* ---------------- Basic validation ---------------- */
function validateForm(form){
  const inputs = Array.from(form.querySelectorAll('[required]'));
  let ok = true;
  inputs.forEach(i=>{
    i.style.outline = 'none';
    if(!i.value){
      i.style.outline = '2px solid rgba(212,175,55,0.36)';
      ok = false;
    } else {
      if(i.type === 'email'){
        const v = i.value;
        if(!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(v)){ i.style.outline = '2px solid rgba(255,80,80,0.36)'; ok=false; }
      }
      if(i.name === 'phone' || i.name === 'emgPhone'){
        const v = i.value.replace(/\s+/g,'');
        if(!/^\+?\d{7,15}$/.test(v)){ i.style.outline = '2px solid rgba(255,80,80,0.36)'; ok=false; }
      }
    }
  });
  return ok;
}

/* ---------------- Confirmation preview modal ---------------- */
function showPreview(text){
  $('#email-preview').textContent = text;
  document.getElementById('modal-preview').classList.add('show');
}
function hidePreview(){ document.getElementById('modal-preview').classList.remove('show'); }

/* ---------------- Delegate form handling ---------------- */
const delegateForm = $('#delegate-form');
const DELEGATE_KEY = 'ximun_delegate_v1';
loadForm(DELEGATE_KEY, delegateForm);

$('#delegate-save').addEventListener('click', ()=> saveForm(DELEGATE_KEY, delegateForm));

$('#delegate-preview').addEventListener('click', ()=>{
  // build preview from current values
  const fd = new FormData(delegateForm);
  const name = fd.get('fullName') || 'Delegate';
  const emailText = `Dear ${name},\n\nThank you for registering for XIMUN 8.0 (Nov 27–29, 2025) hosted at Xavier International College, Kalopul, Kathmandu. This message is an acknowledgment of receipt of your registration. We will contact you with committee allocation and logistical details shortly.\n\nIf you have any urgent queries, contact the Secretariat: ximodelunitednations@xavier.edu.np\n\nKind regards,\nXIMUN Secretariat`;
  showPreview(emailText);
});

delegateForm.addEventListener('submit', (e)=>{
  e.preventDefault();
  if(!validateForm(delegateForm)){
    toast('Please correct highlighted fields');
    delegateForm.scrollIntoView({behavior:'smooth', block:'center'});
    return;
  }
  const fd = new FormData(delegateForm);
  const name = fd.get('fullName') || 'Delegate';
  const emailText = `Dear ${name},\n\nThank you — your registration for XIMUN 8.0 has been received.\n\nDetails submitted:\n- Name: ${fd.get('fullName')}\n- Email: ${fd.get('email')}\n- Primary committee: ${fd.get('primaryCommittee')}\n\nWe will contact you with confirmation and payment details.\n\nKind regards,\nXIMUN Secretariat`;
  showPreview(emailText);
  // clear local draft:
  localStorage.removeItem(DELEGATE_KEY);
  delegateForm.reset();
  toast('Registration submitted (local preview). Integrate with backend to save remotely.');
});

/* ---------------- Dias form handling ---------------- */
const diasForm = $('#dias-form');
const DIAS_KEY = 'ximun_dias_v1';
loadForm(DIAS_KEY, diasForm);
$('#dias-save').addEventListener('click', ()=> saveForm(DIAS_KEY, diasForm));
diasForm.addEventListener('submit', (e)=>{
  e.preventDefault();
  if(!validateForm(diasForm)){
    toast('Please correct highlighted fields');
    diasForm.scrollIntoView({behavior:'smooth', block:'center'});
    return;
  }
  const fd = new FormData(diasForm);
  const name = fd.get('fullName') || 'Applicant';
  const emailText = `Dear ${name},\n\nThank you for applying to the Dias / Secretariat for XIMUN 8.0. We will review your application and contact you regarding further steps.\n\nKind regards,\nXIMUN Secretariat`;
  showPreview(emailText);
  localStorage.removeItem(DIAS_KEY);
  diasForm.reset();
  toast('Application submitted (local preview). Integrate with backend to save remotely.');
});

/* ---------------- small helpers and accessibility ---------------- */
document.addEventListener('keydown', (e)=>{ if(e.key === 'Escape'){ document.getElementById('modal-preview').classList.remove('show'); document.getElementById('sg-modal').classList.remove('show'); }});
$$('a[href^="#"]').forEach(a=> a.addEventListener('click', (ev)=>{
  const href = a.getAttribute('href'); if(href === '#') return;
  const target = document.querySelector(href);
  if(target){ ev.preventDefault(); window.scrollTo({top: target.getBoundingClientRect().top + window.scrollY - 80, behavior: 'smooth'}); }
}));

// small tip toast on first visit
(function firstTip(){
  if(!localStorage.getItem('ximun_seen_tip_v1')){
    setTimeout(()=> toast('Tip — use "Save Draft" to store your progress locally.'), 800);
    localStorage.setItem('ximun_seen_tip_v1', '1');
  }
})();

